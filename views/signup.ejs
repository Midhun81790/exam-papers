<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow" style="width: 400px;">
        <h2 class="text-center mb-3">Signup</h2>
        
        <form id="signupForm" action="/signup" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label">VIT-AP Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Signup</button>
        </form>

        <div class="text-center mt-3">
            <p>Already have an account? <a href="/login" class="btn btn-outline-primary btn-sm">Login</a></p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript for Email Validation -->
    <script>
        document.getElementById("signupForm").addEventListener("submit", function(event) {
            const email = document.getElementById("email").value;
            
            if (!email.endsWith("@vitapstudent.ac.in")) {
                event.preventDefault();
                const alertDiv = document.createElement("div");
                alertDiv.className = "alert alert-danger text-center mt-3";
                alertDiv.innerText = "Only VIT-AP emails are allowed!";
                document.querySelector(".card").appendChild(alertDiv);

                setTimeout(() => alertDiv.remove(), 3000);
            }
        });
    </script>
</body>
</html>
